# Unicorn Embedding Server Configuration
MODELS_DIR=./models
UNLOAD_TIMEOUT=300

# Server configuration
HOST=0.0.0.0
PORT=8000

# AMD GPU configuration for 780m iGPU with 76GB RAM (VULKAN-ONLY)
LLAMA_VULKAN=1
LLAMA_VULKAN_FORCE=1
VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/radeon_icd.x86_64.json
VULKAN_DEVICE=0
GPU_MAX_ALLOC_PERCENT=95
# Note: ROCm disabled - using pure Vulkan for optimal performance

# Model-specific optimizations (auto-configured for 76GB RAM)
# Nomic v1.5: 8192 context, BGE reranker: 1024 recommended
LLAMA_N_GPU_LAYERS=-1
LLAMA_N_CTX=8192
LLAMA_N_BATCH=1024
LLAMA_N_THREADS=8

# Logging
LOG_LEVEL=INFO
